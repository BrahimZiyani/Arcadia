{% extends 'base.html.twig' %}

{% block title %}Ajouter un Nouveau Service{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Ajouter un Nouveau Service</h2>

    <div class="card p-4 shadow-sm mb-4">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_label(form.nom, 'Nom du service') }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du service'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.description, 'Description du service') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description du service'}}) }}
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_label(form.photo, 'Photo du service') }}
                {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.photo) }}
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-dark">Ajouter un service</button>
            <a href="{{ path('app_services') }}" class="btn btn-secondary ms-2">Annuler</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
