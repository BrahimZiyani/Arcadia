{% extends 'base.html.twig' %}

{% block title %}Nos Services{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">Nos Services</h2>
    
    <div class="row">
        {% for service in services %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    {% if service.photo %}
                        <img src="{{ asset(service.photo) }}" class="card-img-top" alt="Photo de {{ service.nom }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ service.nom }}</h5>
                        <p class="card-text">{{ service.description }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun service disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
