{# templates/habitats/foret_tropicale.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Forêt Tropicale{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="hero-banner d-flex align-items-center justify-content-between p-5 bg-light" style="height: 400px;">
            <div class="hero-text">
                <h1 class="display-4">Forêt Tropicale</h1>
                <p class="lead">Découvrez la diversité de notre forêt tropicale et ses habitants fascinants.</p>
            </div>
            <div class="hero-image">
                <img src="{{ asset('build/images/ForetTropicale/foret_tropicale.jpg') }}" class="img-fluid" alt="Forêt Tropicale" style="height: 300px; object-fit: cover;">
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 mb-4">
                <h2>Les Animaux</h2>
            </div>
        </div>

        <div class="row">

            <!-- Langur avec bébé -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="{{ asset('build/images/ForetTropicale/Singes/Langur.jpg') }}" class="card-img-top" alt="Langur avec bébé" style="height: 500px; width: 100%; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Langur avec bébé</h5>
                        <p class="card-text">Espèce: Semnopithecus</p>
                        <p class="card-text">État: En bonne santé</p>
                        <p class="card-text">Nourriture: Feuilles, Fruits</p>
                    </div>
                </div>
            </div>

            <!-- Lémur catta -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="{{ asset('build/images/ForetTropicale/Lemurs/Lémur.jpg') }}" class="card-img-top" alt="Lémur catta" style="height: 500px; width: 100%; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Lémur catta</h5>
                        <p class="card-text">Espèce: Lemur catta</p>
                        <p class="card-text">État: En bonne santé</p>
                        <p class="card-text">Nourriture: Fruits, Insectes</p>
                    </div>
                </div>
            </div>

            <!-- Macaque -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="{{ asset('build/images/ForetTropicale/Singes/Macaque.jpg') }}" class="card-img-top" alt="Macaque" style="height: 500px; width: 100%; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Macaque</h5>
                        <p class="card-text">Espèce: Macaca</p>
                        <p class="card-text">État: En bonne santé</p>
                        <p class="card-text">Nourriture: Fruits, Feuilles</p>
                    </div>
                </div>
            </div>

            <!-- Paresseux -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="{{ asset('build/images/ForetTropicale/Paresseux/Paresseu.jpg') }}" class="card-img-top" alt="Paresseux" style="height: 500px; width: 100%; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Paresseux</h5>
                        <p class="card-text">Espèce: Bradypus</p>
                        <p class="card-text">État: En bonne santé</p>
                        <p class="card-text">Nourriture: Feuilles, Fruits</p>
                    </div>
                </div>
            </div>

            <!-- Paresseux à 2 doigts-->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="{{ asset('build/images/ForetTropicale/Paresseux/ParesseuDeuxDoigts.jpg') }}" class="card-img-top" alt="Paresseux à deux doigts" style="height: 500px; width: 100%; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Paresseux à 2 doigts</h5>
                        <p class="card-text">Espèce: Bradypus</p>
                        <p class="card-text">État: En bonne santé</p>
                        <p class="card-text">Nourriture: Feuilles, Fruits</p>
                    </div>
                </div>
            </div>

            <!-- Babouin -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <img src="{{ asset('build/images/ForetTropicale/Singes/Babouin.jpg') }}" class="card-img-top" alt="Paresseux" style="height: 500px; width: 100%; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Babouin</h5>
                        <p class="card-text">Espèce: Papio</p>
                        <p class="card-text">État: En bonne santé</p>
                        <p class="card-text">Nourriture: Fruits, Graines, Insectes</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
