{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-3 text-center">
            <h4 class="mt-3">{{ app.user.nom }} {{ app.user.prenom }}</h4>
            <p class="text-muted">
                {% if 'ROLE_ADMIN' in app.user.roles %}
                    Administrateur
                {% elseif 'ROLE_USER' in app.user.roles %}
                    Vétérinaire
                {% else %}
                    Aucun rôle défini
                {% endif %}
            </p>
            <a href="#" class="btn btn-outline-secondary btn-sm mb-2">Contact</a>
            <a href="#" class="btn btn-dark btn-sm">Voir le profil</a>
        </div>

        <div class="col-md-9">
            <!-- Section de statistiques -->
            <h2 class="mb-4">Rapports Vétérinaire</h2>
            <div class="row text-center mb-4">
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h4>100</h4>
                            <p>Nombre de rapports</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h4>60</h4>
                            <p>Filtrer par Habitats</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h4>30</h4>
                            <p>Filtrer par Animal</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-body">
                            <h4>40</h4>
                            <p>Filtrer par Date</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section de création de rapport -->
            <h2 class="mb-4">Rapport</h2>
            <form>
                <div class="form-group">
                    <label for="animal-name">Nom de l'animal</label>
                    <input type="text" class="form-control" id="animal-name" placeholder="Entrez le nom de l'animal">
                </div>
                <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" class="form-control" id="date">
                </div>
                <div class="form-group">
                    <label for="report">Compte rendu</label>
                    <textarea class="form-control" id="report" rows="4" placeholder="Entrez le compte rendu"></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="reset" class="btn btn-outline-secondary">Recommencer</button>
                    <button type="submit" class="btn btn-dark">Créer</button>
                </div>
            </form>

            <!-- Section de soumission d'avis -->
            <h2 class="mb-4 mt-5">Laissez un avis sur un habitat</h2>
            <form>
                <div class="form-group">
                    <label for="name">Nom</label>
                    <input type="text" class="form-control" id="name" placeholder="Entrez votre nom">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Entrez votre email">
                </div>
                <div class="form-group">
                    <label for="habitat">Habitat</label>
                    <input type="text" class="form-control" id="habitat" placeholder="Entrez l'habitat">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Entrez votre message"></textarea>
                </div>
                <button type="submit" class="btn btn-dark">Envoyer</button>
            </form>

            <!-- Section de gestion des employés pour l'admin -->
            {% if is_granted('ROLE_ADMIN') %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 mt-5">
                <h1 class="display-4">Gestion des comptes employés</h1>
                <p class="lead">Gérer les comptes employés et vétérinaires</p>
            </div>
        </div>

        <!-- Cartes pour la gestion des comptes -->
        <div class="row mt-4">
            <!-- Carte Employé -->
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Employé</h5>
                        <p class="card-text">Créer/Gérer un compte Employé</p>
                        <a href="{{ path('user_new') }}" class="btn btn-primary">Créer un employé</a>
                    </div>
                </div>
            </div>

        <!-- Liste des employés avec options de modification et suppression -->
        <div class="row mt-5">
            <div class="col-md-12">
                <h3 class="mt-5">Liste des employés</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Rôle</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for employee in users %}
                            <tr>
                                <td>{{ employee.email }}</td>
                                <td>{{ employee.nom }}</td>
                                <td>{{ employee.prenom }}</td>
                                <td>{{ employee.roles | json_encode }}</td>
                                <td>
                                    <a href="{{ path('user_edit', {'id': employee.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    <a href="{{ path('user_delete', {'id': employee.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet employé ?');">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endif %}
        </div>
    </div>
</div>
{% endblock %}