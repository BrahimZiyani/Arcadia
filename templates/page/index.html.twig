{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    <!-- Swiper-->
    <div id="react-root"></div>
    <div class="container">
        
        <!-- Visitors' Reviews Section -->
        <div class="mt-5">
            <h2 class="text-center">Avis des visiteurs</h2>
            <p class="text-center">Retour en direct de nos visiteurs !</p>
            <div class="row justify-content-center">
                {% if avisList is defined and avisList|length > 0 %}
                    {% for avis in avisList %}
                        <div class="col-md-4 mb-3 d-flex align-items-stretch">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ avis.prenom }}</h5>
                                    <p class="card-text">{{ avis.contenu }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-center">Aucun avis disponible pour le moment.</p>
                {% endif %}
            </div>
        </div>

        <!-- Newsletter Section -->
        <div class="mt-5 text-center">
            <h2>Inscrivez-vous à notre newsletter</h2>
            <p>Pour ne rien rater des actualités du Zoo !</p>
            <form class="form-inline justify-content-center">
                <div class="form-group mb-2">
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Entrez votre email">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                    <label for="name" class="sr-only">Nom</label>
                    <input type="text" class="form-control" id="name" placeholder="Entrez votre nom">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Inscription</button>
            </form>
        </div>
    </div>
{% endblock %}
