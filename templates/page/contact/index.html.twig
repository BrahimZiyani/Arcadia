{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header text-white" style="background-color: #2A9D8F;">
                        <h1 class="mb-0" style="color: #FFFFFF;">Contactez-nous</h1>
                    </div>
                    <div class="card-body">
                        {# Messages de succès après soumission #}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {# Formulaire de contact avec Formspree #}
                        <form action="https://formspree.io/f/mqakopke" method="POST">
                            <div class="mb-3">
                                <label for="email" class="form-label" style="color: #353535;">Votre adresse e-mail</label>
                                <input type="email" id="email" name="email" class="form-control" placeholder="Votre adresse e-mail" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label" style="color: #353535;">Votre message</label>
                                <textarea id="message" name="message" class="form-control" placeholder="Votre message" rows="5" required></textarea>
                            </div>
                            {# Champ caché pour redirection après soumission #}
                            <input type="hidden" name="_redirect" value="{{ path('app_thank_you') }}">
                            <button type="submit" class="btn text-white w-100" style="background-color: #2A9D8F;">
                                Envoyer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
