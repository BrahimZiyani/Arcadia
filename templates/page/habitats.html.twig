{% extends 'base.html.twig' %}

{% block title %}Habitats{% endblock %}

{% block body %}
    <div class="container mt-4">
        <!-- Header Section -->
        <div class="text-center mb-4">
            <h1>Nos habitats</h1>
        </div>

        <!-- Habitats Section -->
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Volière Tropicale">
                    <div class="card-body">
                        <span class="badge badge-primary">Populaire</span>
                        <h5 class="card-title mt-2">Volière Tropicale</h5>
                        <p class="card-text">Perroquets, Toucans et Aras</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Forêt Tropicale">
                    <div class="card-body">
                        <span class="badge badge-secondary">Endémique</span>
                        <h5 class="card-title mt-2">Forêt Tropicale</h5>
                        <p class="card-text">Singes Capucins et Paresseux</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Enclos de Réhabilitation">
                    <div class="card-body">
                        <span class="badge badge-primary">Populaire</span>
                        <h5 class="card-title mt-2">Enclos de Réhabilitation</h5>
                        <p class="card-text">Loups</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <footer class="mt-5 text-center">
            <div class="row">
                <div class="col">
                    <p>Nous contacter</p>
                </div>
                <div class="col">
                    <p>Conditions d'utilisation</p>
                </div>
                <div class="col">
                    <p>Politique de confidentialité</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p>&copy; 2024 Arcadia Zoo</p>
                </div>
            </div>
        </footer>
    </div>
{% endblock %}
