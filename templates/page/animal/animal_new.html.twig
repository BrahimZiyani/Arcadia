{% extends 'base.html.twig' %}

{% block title %}Ajouter un Animal{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Ajouter un nouvel animal</h1>

    <form method="post" action="{{ path('animal_new') }}">
        <div class="form-group">
            <label for="animal_prenom">Prénom de l'animal</label>
            <input type="text" class="form-control" id="animal_prenom" name="animal_prenom" required>
        </div>
        
        <div class="form-group">
            <label for="animal_race">Race</label>
            <input type="text" class="form-control" id="animal_race" name="animal_race" required>
        </div>

        <div class="form-group">
            <label for="habitat">Habitat</label>
            <select class="form-control" id="habitat" name="habitat_id" required>
                {% for habitat in habitats %}
                    <option value="{{ habitat.id }}">{{ habitat.nom }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="animal_sante">État de santé</label>
            <input type="text" class="form-control" id="animal_sante" name="etat_de_sante" required>
        </div>

        <div class="form-group">
            <label for="animal_alimentation">Alimentation</label>
            <input type="text" class="form-control" id="animal_alimentation" name="alimentation" required>
        </div>

        <div class="d-flex justify-content-between">
            <button type="reset" class="btn btn-outline-secondary">Réinitialiser</button>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
    </form>
</div>
{% endblock %}
