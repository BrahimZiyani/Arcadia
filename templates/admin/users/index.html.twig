{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>User Management</h1>
    <a href="{{ path('admin_users_new') }}" class="btn btn-primary mb-3">Add New User</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|json_encode }}</td>
                <td>
                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
                    <a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-danger" 
                        onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
